@model EstimadorBM.Pages.GeneralModel
@{
	ViewData["Title"] = "Presupuestos 73";
}

@* <link rel="stylesheet" href="~/css/General.css" asp-append-version="true" /> *@
<script type="module" src="~/js/General.js" asp-append-version="true"></script>


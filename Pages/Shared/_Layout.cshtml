<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EstimadorBM</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/EstimadorBM.styles.css" asp-append-version="true" />

	<!-- The page supports both dark and light color schemes,
		and the page author prefers / default is light. -->
	<meta name="color-scheme" content="light dark">
	<!-- Replace the Bootstrap CSS with the
		 Bootstrap-Dark Variant CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-nightshade.min.css" rel="stylesheet">
	<!-- Required DarkMode JavaScript -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/js/darkmode.min.js"></script>


</head>
<body class="custom">
	<header class="custom">
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-brown  box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">EstimadorBM</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-page="/Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-page="/General">Estimador</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted custom">

		<div class="container">
			<a target="_blank" href="mailto:labarradel73@gamil.com">labarradel73@gmail.com</a>
			<a target="_blank" href="https://www.instagram.com/labarradel73/">Instagram</a>
			&copy; 2023 - EstimadorBM - <a asp-area="" asp-page="/Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
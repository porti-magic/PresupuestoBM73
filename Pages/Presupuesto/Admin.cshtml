@page
@model EstimadorBM.Pages.Presupuesto.AdminModel
@{
	ViewData["Title"] = "Presupuestos 73 Admin";
}

<script type="module" src="~/js/Presupuesto/Admin.js" asp-append-version="true"></script>

<div class="container">
	<div class="accordion" id="accordion">
		<div class="accordion-item">
			<h2 class="accordion-header" id="headingProveedores">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseProveedores" aria-expanded="false" aria-controls="collapseProveedores">
					Proveedores
				</button>
			</h2>
			<div id="collapseProveedores" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordion">
				<div class="accordion-body">
					<table id="proveedoresTable" class="table table-hover">
						<thead>
							<tr>
								<th scope="col">ID</th>
								<th scope="col">Nombre</th>
								<th scope="col">Teléfono</th>
								<th scope="col">Mail</th>
								<th scope="col">Última Actualización</th>
								<th scope="col"> </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var p in Model.Proveedores)
							{
								<tr>
									<td scope="row">@p.ID</td>
									<td>@p.Nombre</td>
									<td>@(p.Telefono?.ToString() ?? "No Disnible")</td>
									<td>@(p.Mail ?? "No Disponible")</td>
									<td>@p.LastUpdate</td>
									<td><a href=@("Precios?proveedorId="+p.ID)>Editar datos</a></td>
								</tr>
							}
						</tbody>
					</table>
					<button id="agregarProveedorBtn" class="col-auto align-self-end btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#nuevoProveedorModal">Agregar proveedor</button>
				</div>
			</div>
		</div>
		<div class="accordion-item">
			<h2 class="accordion-header" id="headingTragos">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTragos" aria-expanded="false" aria-controls="collapseTragos">
					Tragos
				</button>
			</h2>
			<div id="collapseTragos" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordion">
				<div class="accordion-body">
					<table id="proveedoresTable" class="table table-hover">
						<thead>
							<tr>
								<th scope="col">ID</th>
								<th scope="col">Nombre</th>
								<th scope="col">Disponible</th>
								<th scope="col">Última Actualización</th>
								<th scope="col"> </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var t in Model.Tragos)
							{
								<tr>
									<td scope="row">@t.ID</td>
									<td>@t.Name</td>
									<td>
										<div class="form-check form-switch">
											<input class="form-check-input NewIngridient" type="checkbox" role="switch" checked=@t.IsAvailable>
										</div>
									</td>
									<td>N/A</td>
									<td><a href=#>Editar</a></td>
								</tr>
							}
						</tbody>
					</table>
					<button id="agregarTragoBtn" class="col-auto align-self-end btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#nuevoTragoModal">Agregar trago</button>
				</div>
			</div>
		</div>
	</div>
</div>

@* Bootstrap Modal Dialog *@
<!-- Modal -->
<div class="modal" id="nuevoProveedorModal" tabindex="-1" role="dialog" aria-labelledby="nuevoProveedorModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="nuevoProveedorModalLabel">Agregar proveedor</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form class="form needs-validation" id="nuevoProveedorData" novalidate>
					<div class="form-floating mb-3">
						<input form="nuevoProveedorData" required placeholder="Nombre" id="name" name="name" class="form-control" />
						<label for="name" class="form-label">Nombre:</label>
						<div class="invalid-feedback">Por favor ingrse el nombre.</div>
					</div>
					<div class="form-floating mb-3">
						<input form="nuevoProveedorData" placeholder="ejemplo@email.com" type="email" id="email" name="Email" class="form-control" />
						<label for="email" class="form-label">Mail</label>
						<div class="invalid-feedback">Por favor ingrse el mail.</div>
					</div>
					<div class="form-floating mb-3">
						<input form="nuevoProveedorData" required placeholder="12345678" title="Sin codigo de area" pattern="[0-9]{8}" type="tel" id="phone" name="Telefono" class="form-control" />
						<label for="phone" class="form-label">Teléfono</label>
						<div class="invalid-feedback">Por favor un telefono sin codgo de area.</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
				<button type="button" class="btn btn-primary" id="crearProveedorBtn">Guardar</button>
			</div>
		</div>
	</div>
</div>
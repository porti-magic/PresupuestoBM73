@page
@model EstimadorBM.Pages.Presupuesto.AdminModel
@{
	ViewData["Title"] = "Presupuestos 73 Admin";
}

<div class="container">
	<div class="card">
		<h5 class="card-header">Proveedores</h5>
		<div class="card-body">
			<div class="row">
				<h5 class="col align-self-start card-title">Estado Actual</h5>
				<button class="col-auto align-self-end btn btn-primary">Agregar proveedor</button>
			</div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Nombre</th>
						<th scope="col">Teléfono</th>
						<th scope="col">Mail</th>
						<th scope="col">Última Actualización</th>
						<th scope="col"> </th>
					</tr>
				</thead>
				<tbody>
					@foreach(var p in Model.Proveedores){
						<tr>
							<td scope="row">@p.ID</td>
							<td>@p.Nombre</td>
							<td>@(p.Telefono?.ToString() ?? "No Disnible")</td>
							<td>@(p.Mail??"No Disponible")</td>
							<td>@p.LastUpdate</td>
							<td><a href="#">Editar datos</a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>